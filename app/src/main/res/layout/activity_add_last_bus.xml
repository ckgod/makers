<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.LastBus.AddLastBusActivity"
    android:background="@color/colorBackGround">

    <LinearLayout
        android:id="@+id/add_last_bus_ll_top_bar"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:orientation="horizontal"
        android:background="@color/colorWhite">
        <ImageButton
            android:id="@+id/add_last_bus_btn_back"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:src="@drawable/ic_cancel_dark"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:adjustViewBounds="true"
            android:background="@color/colorFree"
            android:layout_gravity="center_vertical"
            android:onClick="addLastBusBtnSet"
            android:paddingVertical="24dp"/>
        <TextView
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="알람 추가"
            android:textSize="20dp"
            android:textStyle="bold"
            android:textColor="@color/colorSplash"
            android:layout_weight="5"/>
        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="완료"
            android:textColor="@color/colorSplash"
            android:layout_weight="1"
            android:background="@color/colorFree"
            android:layout_gravity="center_vertical"
            android:visibility="invisible"/>
    </LinearLayout>
    <View
        android:id="@+id/add_last_bus_top_line"
        android:layout_below="@id/add_last_bus_ll_top_bar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorWhiteGray"/>

    <ScrollView
        android:layout_below="@id/add_last_bus_top_line"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackGround">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorBackGround">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/title_path"
                    android:textColor="@color/colorGray"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="left"
                    android:layout_marginBottom="1dp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp" />
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGray"/>
            </LinearLayout>

            <FrameLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="25dp"
                android:layout_marginVertical="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/add_last_bus_tab_path_info_1"
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        app:cardBackgroundColor="@color/colorYellow"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true"
                        android:visibility="invisible">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="2.5"/>
                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:orientation="vertical"
                                    android:gravity="bottom">
                                    <TextView
                                        android:id="@+id/last_path_item_tv_transit_type"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="버스"
                                        android:textSize="15dp"
                                        android:textColor="@color/colorWhite" />
                                    <View
                                        android:layout_width="match_parent"
                                        android:layout_height="1dp"
                                        android:background="@color/colorWhite"/>
                                </LinearLayout>
                                <TextView
                                    android:id="@+id/last_path_item_tv_transit_num"
                                    android:layout_width="wrap_content"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:gravity="center"
                                    android:text="5003A"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorWhite"
                                    android:textSize="25dp" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_weight="1"
                                    android:visibility="invisible"/>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/add_last_bus_tab_path_info_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="invisible">
                    <androidx.cardview.widget.CardView
                        android:layout_width="0dp"
                        android:layout_height="151dp"
                        android:layout_weight="2.2"
                        app:cardBackgroundColor="@color/colorWhite"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="5dp"
                        app:cardUseCompatPadding="true">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:layout_marginLeft="25dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                android:gravity="bottom">
                                <TextView
                                    android:id="@+id/last_path_item_tv_station"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="정류장/역"
                                    android:textColor="@color/colorSplash"
                                    android:textSize="15dp"
                                    android:layout_marginBottom="1dp"/>
                                <View
                                    android:layout_width="match_parent"
                                    android:layout_height="1dp"
                                    android:background="@color/colorSplash"/>
                            </LinearLayout>
                            <TextView
                                android:id="@+id/last_path_item_tv_start_station"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="기흥역정류장"
                                android:textColor="@color/colorSplash"
                                android:textStyle="bold"
                                android:textSize="18dp"
                                android:layout_marginRight="10dp" />
                            <TextView
                                android:id="@+id/last_path_item_tv_end_station"
                                android:layout_width="wrap_content"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:gravity="top"
                                android:text="→양재역"
                                android:textSize="10sp"
                                android:textColor="@color/colorSplash" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:visibility="invisible"/>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/add_last_bus_btn_plus_path"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/btn_plus"
                    android:background="@color/colorFree"
                    android:layout_gravity="center"
                    android:scaleType="fitCenter"
                    android:adjustViewBounds="true"
                    android:onClick="addLastBusBtnSet"/>

            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title_date"
                    android:textColor="@color/colorGray"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="1dp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/colorGray"/>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/add_last_bus_btn_day_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp">
                <TextView
                    android:id="@+id/add_last_bus_tv_monday"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="월"
                    android:textColor="@color/colorOffGray"
                    android:textSize="20dp"
                    android:background="@drawable/white_circle"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:onClick="addLastBusBtnSet"/>
                <TextView
                    android:id="@+id/add_last_bus_tv_tuesday"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="화"
                    android:textColor="@color/colorOffGray"
                    android:textSize="20dp"
                    android:background="@drawable/white_circle"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:onClick="addLastBusBtnSet"/>
                <TextView
                    android:id="@+id/add_last_bus_tv_wednesday"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="수"
                    android:textColor="@color/colorOffGray"
                    android:textSize="20dp"
                    android:background="@drawable/white_circle"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:onClick="addLastBusBtnSet"/>
                <TextView
                    android:id="@+id/add_last_bus_tv_thursday"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="목"
                    android:textColor="@color/colorOffGray"
                    android:textSize="20dp"
                    android:background="@drawable/white_circle"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:onClick="addLastBusBtnSet"/>
                <TextView
                    android:id="@+id/add_last_bus_tv_friday"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="금"
                    android:textColor="@color/colorOffGray"
                    android:textSize="20dp"
                    android:background="@drawable/white_circle"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:onClick="addLastBusBtnSet"/>
                <TextView
                    android:id="@+id/add_last_bus_tv_saturday"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="토"
                    android:textColor="@color/colorOffGray"
                    android:textSize="20dp"
                    android:background="@drawable/white_circle"
                    android:gravity="center"
                    android:layout_marginRight="10dp"
                    android:onClick="addLastBusBtnSet"/>
                <TextView
                    android:id="@+id/add_last_bus_tv_sunday"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:text="일"
                    android:textColor="@color/colorOffGray"
                    android:textSize="20dp"
                    android:background="@drawable/white_circle"
                    android:gravity="center"
                    android:onClick="addLastBusBtnSet"/>
            </LinearLayout>

            <Button
                android:id="@+id/add_last_bus_btn_complete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="설정 완료"
                android:textColor="@color/colorWhite"
                android:background="@drawable/custom_yellow_button"
                android:layout_marginTop="25dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginBottom="25dp"
                android:stateListAnimator="@color/colorNull"
                android:onClick="addLastBusBtnSet"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>