<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/splash_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.publicTA.template.src.splash.SplashActivity"
    android:background="@color/colorSplash">

    <ImageView
        android:id="@+id/splash_logo"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="13dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:text="대중교통"
        android:textColor="@color/colorFontColor"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="@+id/splash_top_curtain"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="13dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="지금"
        android:textColor="@color/colorFontColor"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="13dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="가서"
        android:textColor="@color/colorFontColor"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        android:visibility="invisible" />

    <TextView
        android:layout_width="13dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:text="타"
        android:textColor="@color/colorFontColor"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="13dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="새로운"
        android:textColor="@color/colorFontColor"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/splash_logo"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="13dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="알람"
        android:textColor="@color/colorFontColor"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="13dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="서비스"
        android:textColor="@color/colorFontColor"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/view"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:visibility="invisible" />

    <View
        android:id="@+id/view"
        android:layout_width="10.2dp"
        android:layout_height="match_parent"
        android:layout_marginStart="22dp"
        android:background="@color/colorYellow"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/splash_logo"
        app:layout_constraintStart_toStartOf="@+id/splash_logo"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/splash_top_curtain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorSplash"
        android:visibility="invisible"
        app:layout_constraintBottom_toTopOf="@+id/splash_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/splash_bottom_curtain"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/colorSplash"
        android:visibility="invisible"
        app:layout_constraintTop_toBottomOf="@+id/splash_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
